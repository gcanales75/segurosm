<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
    @*@Styles.Render("~/Content/styles.css")*@
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/angular.min.js")
    @Scripts.Render("~/Scripts/angular-cookies.min.js")
    @Scripts.Render("~/Scripts/angular-route.min.js")
    @Scripts.Render("~/Scripts/adminApp.js")
    @Scripts.Render("~/Scripts/adminControllers.js")
    <script src="https://www.gstatic.com/firebasejs/4.12.1/firebase.js"></script>
    <script src="https://www.gstatic.com/firebasejs/4.12.1/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/4.12.1/firebase-auth.js"></script>
</head>
<body ng-app="adminAppAuth" class="mainContent">
    <header ng-controller="navegacionController">
        <nav role="navigation" id="navigation" class="navbar navbar-default">
            <div class="container">
                <div class="row">
                    <div class="col-sm-2 col-xs-2 col-md-2 text-right">
                        <a class="logo" href="#/"><img class="col-md-9" src="~/Img/Logo_mundial_admin.png" /></a>
                    </div>
                    <div class="col-sm-10 col-xs-10 topspace">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-navbar-collapse-1" aria-expanded="false">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                        </div>
                        <div class="collapse navbar-collapse" id="main-navbar-collapse-1" style="display:flex; align-items:center; justify-content:center">
                            <ul class="nav navbar-nav">
                                <li ng-class="{ active : esActivo('/') }">
                                    <a href="#/">Inicio</a>
                                </li>
                                <li ng-class="{ active : esActivo('/usuarios') }" ng-show="isAutenticated">
                                    <a href="#/usuarios">Usuarios</a>
                                </li>
                                <li ng-class="{ active : esActivo('/roles') }" ng-show="isAutenticated">
                                    <a href="#/roles">Roles</a>
                                </li>
                                <li ng-class="{ active : esActivo('/appclients') }" ng-show="isAutenticated">
                                    <a href="#/appclients">Aplicaciones Cliente</a>
                                </li>
                            </ul>
                            <a class="btn btn-danger logout" ng-click="logout()" ng-show="isAutenticated" style="float:right">Cerrar Sesion</a>
                            <a class="btn btn-success" ng-click="login()" ng-hide="isAutenticated" style="float:right">Iniciar Session</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <div class="mainbody"></div>
        <div ng-view></div>
    </div>
</body>
</html>
